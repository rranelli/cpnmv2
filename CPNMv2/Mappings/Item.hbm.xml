<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="CPNMv2" namespace="CPNMv2.Domain">
  <class name="Item">
    <id name="Id">
      <generator class="guid"/>
    </id>
    <property name="Name"/>
    <property name="UniqueName"/>
    <property name="Description"/>
    <property name="IsActive"/>
    <many-to-one name ="ItemType" cascade="all"/>
    <many-to-one name="Project" cascade="all"/>
    <set name="PropValues" cascade="all-delete-orphan">
      <key column="ItemId"/>
      <one-to-many class="PropValue"/>
    </set>
  </class>
</hibernate-mapping>